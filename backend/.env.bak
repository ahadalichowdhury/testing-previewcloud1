# Server Configuration
PORT=3001
# NODE_ENV=production
NODE_ENV=development

# MongoDB Configuration (Platform Database)
MONGODB_URI=mongodb://localhost:27017/previewcloud
# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# Domain Configuration
BASE_DOMAIN=preview.previewcloud.cloud
WILDCARD_SSL=true

# GitHub Configuration (get from GitHub webhook settings)
GITHUB_WEBHOOK_SECRET=YOUR_ACTUAL_GITHUB_WEBHOOK_SECRET

# JWT Secret (IMPORTANT: Generate secure secrets!)
# Generate: openssl rand -hex 32
JWT_SECRET=GENERATE_A_SECURE_32_CHAR_HEX_STRING

# API Token Secret
# Generate: openssl rand -hex 32
API_TOKEN_SECRET=GENERATE_A_DIFFERENT_SECURE_32_CHAR_HEX_STRING

# Preview Configuration
MAX_PREVIEWS=20
IDLE_TIMEOUT_HOURS=48
CLEANUP_INTERVAL_MINUTES=30

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_ADMIN_USER=postgres
POSTGRES_ADMIN_PASSWORD=SECURE_PASSWORD_HERE

# MySQL Configuration
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_ADMIN_USER=root
MYSQL_ADMIN_PASSWORD=SECURE_PASSWORD_HERE

# MongoDB Configuration
MONGODB_HOST=preview-mongodb
MONGODB_PORT=27017
MONGODB_ADMIN_USER=admin
MONGODB_ADMIN_PASSWORD=SECURE_PASSWORD_HERE

# Traefik Configuration
TRAEFIK_NETWORK=traefik-proxy
TRAEFIK_API_URL=http://traefik:8080

# Security
PREVIEW_PASSWORD_PROTECTED=false
PREVIEW_DEFAULT_PASSWORD=preview123

# Log Level
LOG_LEVEL=info