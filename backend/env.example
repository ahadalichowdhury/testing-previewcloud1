# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration (Platform Database)
MONGODB_URI=mongodb://localhost:27017/previewcloud

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# Domain Configuration
BASE_DOMAIN=preview.previewcloud.cloud
WILDCARD_SSL=true

# GitHub Configuration
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret-here

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your-super-secret-jwt-key-change-this

# API Token Secret (generate with: openssl rand -hex 32)
API_TOKEN_SECRET=your-api-token-secret-change-this

# Preview Configuration
MAX_PREVIEWS=20
IDLE_TIMEOUT_HOURS=48
CLEANUP_INTERVAL_MINUTES=30

# PostgreSQL Configuration (for preview databases)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_ADMIN_USER=postgres
POSTGRES_ADMIN_PASSWORD=your-postgres-password

# MySQL Configuration (for preview databases)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_ADMIN_USER=root
MYSQL_ADMIN_PASSWORD=your-mysql-password

# MongoDB Configuration (for preview databases)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_ADMIN_USER=admin
MONGODB_ADMIN_PASSWORD=your-mongodb-password

# Traefik Configuration
TRAEFIK_NETWORK=traefik-proxy
TRAEFIK_API_URL=http://localhost:8080

# Security
PREVIEW_PASSWORD_PROTECTED=false
PREVIEW_DEFAULT_PASSWORD=preview123

# Optional: Log Level
LOG_LEVEL=info

# Email Configuration (SMTP)
# If not configured, emails will be logged instead of sent
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="PreviewCloud" <noreply@previewcloud.cloud>

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

